<div class="container" id="register">
  <h1>Register for Event</h1>
  <div class="row">
    <div class="col-md-3">
      <%= form_with(model: @evnt, local: true) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.submit "Register" , class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
