<div class="all">
	<div class="container">
<h1>Please Login</h1>
<div class="row">
	<div class="col-md-2">
		<%= form_with(url: login_url, scope: :session, local:true) do |f| %>
		<%= f.label :email %>
		<%= f.text_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.submit "Login" , class: "btn btn-primary" %>
		<% end %>
		<p>New user? <%= link_to "Sign up" , register_path%></p>
	</div>
	</div>
</div>
</div>